<% unless locals.empty? %>
  <%= message %>
<% end %>

<h1>Edit <%=@song.name%></h1>
<form method="POST" action="/songs/<%=@song.slug%>">
  <input type="hidden" id="hidden" name="_method" method="PATCH">
  <p>Song Name:</p> <input type="text" name="song[name]" id="Name">
  <p>Artist Name:</p> <input type="text" name="song[artist][name]" id="Artist Name">
  <p>Choose Genres:</p> 
  <%Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"<%='checked' if @song.genres.include?(genre) %>><%=genre.name%>
  <%end%>
  <input type="submit" id="Save">
</form>